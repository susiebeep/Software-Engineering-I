<h1>Submit a Job You'd Like Completed</h1>

<form action="/insert"
	method="post"
	id="insertJob">
	<fieldset>
		<legend ><b>Job Details:</b></legend>
		<p>
			ownerID: <input type='number' id='ownerID' value={{userId}} required>
		</p>
		<p>
			jobPostedDate: <input type='date' id='jobPostedDate' required>
		</p>
		<p>
			Job Title: <input type='text' id='jobTitle' maxlength='45' size='45' required>
		</p>
		<p>
			Job Category: <select name='categoryId'>
				<option style="display:none"></option>
				{{#each categories}}
					<option value='{{categoryId}}'>{{category}}</option>
				{{/each}}
			</select>
		</p>
		<p>
			Desired Completion Date: <input type='date' id='jobExpectedCompletionDate'>
		</p>
		<p>
			Location (address or general description): <input type='text' id='location' maxlength='90' size='90'>
		</p>
		<p>
			Details:
		</p>
		<p>
			<textarea id='jobDetails' maxlength='255' rows='4' cols='90'></textarea>
		</p>
		<input type='submit' value='Submit' id="insertJob">
	</fieldset>
</form>

<script>
	// Prefilling jobPostedDate field based on Chris Coyier's article "Prefilling a Date Input"
	// https://css-tricks.com/prefilling-date-input/
	var today = new Date().toISOString().substr(0, 10);
	document.getElementById("jobPostedDate").value = today;
</script>